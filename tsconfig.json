{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "types": ["cypress", "@types/jest"],
        "typeRoots": [
          "./typings"
        ]
    },
    "include": [
        "./cypress/**/*", "./src/**/*", "./test/**/*", "setupTests.ts"
    ]
}